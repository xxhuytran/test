<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/signupFragment">
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.mobile.test.ui.screens.signup.SignupFragment"
        android:label="signupFragment"
        tools:layout="@layout/signup_fragment">
        <action
            android:id="@+id/action_signupFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.mobile.test.ui.screens.categories.CategoriesFragment"
        android:label="CategoriesFragment"
        tools:layout="@layout/categories_fragment"/>
</navigation>